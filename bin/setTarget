#!/bin/bash

ip_regex='^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$'
if [ $# -eq 1 ] && [[ $1 =~ $ip_regex ]]; then
    echo "$1" > /home/user_replace/.config/bin/target
else
    echo "$(basename $0) [IP]"
fi
